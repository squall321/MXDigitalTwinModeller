<?xml version="1.0" encoding="utf-8"?>
<extension version="2" name="mxsimulator">
  <!-- 확장 메타데이터 -->
  <guid>8F7A9B2C-3D4E-5F6A-7B8C-9D0E1F2A3B4C</guid>
  <script src="main.py" />
  <description>MX Digital Twin Simulator for ANSYS Mechanical</description>
  <descriptionId>MXSimulator.Description</descriptionId>
  <helpURL>https://github.com/squall321/MXDigitalTwinModeller</helpURL>

  <!-- 인터페이스: MXSimulator 탭 추가 -->
  <interface context="Mechanical">
    <!-- MXSimulator 탭 -->
    <tab caption="MXSimulator" tabId="mxsimulator_tab">
      <!-- Load 패널 -->
      <panel caption="Load" panelId="mxsimulator_load_panel">
        <!-- Cap Vibration 버튼 -->
        <button
          caption="Cap Vibration"
          icon="images/cap_vibration.png"
          callback="show_cap_vibration_dialog"
          buttonId="cap_vibration_btn">
          <description>Open Cap Vibration load definition dialog</description>
        </button>
      </panel>
    </tab>
  </interface>

  <!-- 이미지 리소스 -->
  <images>
    <image id="cap_vibration_icon" src="images/cap_vibration.png" />
  </images>

  <!-- 콜백 등록 -->
  <callbacks>
    <callback name="show_cap_vibration_dialog" symbol="show_cap_vibration_dialog" />
  </callbacks>
</extension>
