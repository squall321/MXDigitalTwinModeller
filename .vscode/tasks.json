{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Default - V252)",
            "type": "shell",
            "command": "${workspaceFolder}/build.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build All (V251 + V252)",
            "type": "shell",
            "command": "${workspaceFolder}/build.bat",
            "args": ["all"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build V251 Only",
            "type": "shell",
            "command": "${workspaceFolder}/build.bat",
            "args": ["v251"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build V252 Only",
            "type": "shell",
            "command": "${workspaceFolder}/build.bat",
            "args": ["v252"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "${workspaceFolder}/build.bat",
            "args": ["clean"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}
